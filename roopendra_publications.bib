	journal = {Journal of the Academy of Marketing Science},
	author = {van der Borgh, M. and Schepers, J.},
	year = {2018},
	keywords = {Business-to-business, Conservative selling behavior, New products, Perceived risk processing theory, Sales management, Salesperson performance},
