	journal = {Journal of Service Research},
	author = {Singh, J. and Nambisan, S. and Bridge, R.G. and Brock, J.K.-U.},
	year = {2021},
	keywords = {artificial intelligence, automated coordination, automated learning, collective intelligence, customer engagement, local intelligence, one-voice strategy, service interaction space, service interface},
	pages = {42--65},
}

@article{agnihotri_social_2020,
	title = {Social media, customer engagement, and sales organizations: {A} research agenda},
	volume = {90},
	shorttitle = {Social media, customer engagement, and sales organizations},
	doi = {10.1016/j.indmarman.2020.07.017},
